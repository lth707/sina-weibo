<% include header %>
<div class="container">
    <div class="ui form segment" style="width:400px;margin: 60px auto">
        <form method="post">
            <div class="ui left icon input">
                <i class="mail icon"></i>
                <input type="text" placeholder="邮箱" name="email" id="email">
            </div>
            <br><br>
            <div class="ui left icon input">
                <i class="lock icon"></i>
                <input type="password" placeholder="密码" name="password" id="password">
            </div>
            <br><br>
            <input type="button" onclick="login()" class="ui button fluid" value="登录">
        </form>
    </div>
</div>
<script>
    function login() {
        $.ajax({
            type:'POST',
            data:{
                email:encodeURIComponent($('#email').val()),
                password:encodeURIComponent($('#password').val())
            },
            url:'http://127.0.0.1:3000/login',
            dataType:'json'
        }).success(function(result){
            if(result.code==200){
                location='/'
            }
            if(result.code==302){
                location.reload();
            }
        });
    }
</script>
